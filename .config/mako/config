# Middle click: dismiss
on-button-middle=dismiss
# Right click: dismiss all
on-button-right=dismiss-all

# Colors (match typical Tokyo Night / Waybar border vibe)
background-color=#16161EFF
text-color=#c0caf5FF

# Border like your blocks (slightly brighter than bg)
border-color=#bb9af7

# Progress bar / highlights (accent)
progress-color=over #7aa2f7FF

# ── urgency styling ──────────────────────────────────────────
[urgency=low]
